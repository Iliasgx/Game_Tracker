<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_lightBlue_backgroundMiddle">

    <item
        android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/shipScrapColor_side"/>
        </shape>
    </item>

    <item
        android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/shipScrapColor_side"
                android:centerColor="@color/shipScrapColor_middle"
                android:endColor="@color/shipScrapColor_side"
                android:type="linear"/>
        </shape>
    </item>
</ripple>