<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragResearchTree_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.umbrella.stfctracker.CustomComponents.GridRecyclerView
        android:id="@+id/fragResearchTree_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:background="@drawable/research_tree_combat"
        tools:listitem="@layout/list_research_item"
        tools:itemCount="20"/>
</RelativeLayout>
