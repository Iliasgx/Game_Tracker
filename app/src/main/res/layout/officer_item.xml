<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/officerItem_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/officer_background"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/officerItem_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/officerItem_officer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/officer_cadet_kirk"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/officerItem_type"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/officerItem_officer"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            tools:ignore="ContentDescription"
            tools:srcCompat="@drawable/type_a" />

        <TextView
            android:id="@+id/officerItem_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/officerItem_officer"
            android:layout_alignEnd="@id/officerItem_officer"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="1dp"
            style="@style/defaultText"
            android:textSize="18sp"
            android:textAlignment="center"
            tools:text="2100" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>