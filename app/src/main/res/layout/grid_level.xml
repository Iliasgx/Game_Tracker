<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLevel_cardViewBorder"
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/buttonLevel_light">

    <androidx.cardview.widget.CardView
        android:id="@+id/gridLevel_cardViewInner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/buttonLevel_dark">

        <TextView
            android:id="@+id/gridLevel_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/defaultText"
            android:textColor="@color/buttonLevel_light"
            android:textSize="26sp"
            tools:text="50"/>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>