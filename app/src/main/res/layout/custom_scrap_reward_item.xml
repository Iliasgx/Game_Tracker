<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrapRewardItem_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/scrapRewardItem_rewardName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/scrapRewardItem_outerLayer"
        android:layout_alignEnd="@id/scrapRewardItem_outerLayer"
        android:layout_alignParentTop="true"
        android:lines="2"
        android:gravity="bottom|center_horizontal"
        style="@style/defaultText"
        android:textSize="14sp"
        tools:text="Survey parts"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/scrapRewardItem_outerLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/scrapRewardItem_rewardName"
        app:cardBackgroundColor="@color/shipScrapRewardItem_greyInner">

        <RelativeLayout
            android:id="@+id/scrapRewardItem_outerLayer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/scrapRewardItem_border"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                app:cardBackgroundColor="@color/shipScrapRewardItem_greyBorder">

                <androidx.cardview.widget.CardView
                    android:id="@+id/scrapRewardItem_innerLayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="1dp"
                    app:cardBackgroundColor="@color/shipScrapRewardItem_background">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/scrapRewardItem_innerLayer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="2dp">

                        <ImageView
                            android:id="@+id/scrapRewardItem_itemImg"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="5dp"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/gas" />

                        <ImageView
                            android:id="@+id/scrapRewardItem__star1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/scrapRewardItem__star2"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            android:src="@drawable/star"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/scrapRewardItem__star2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/scrapRewardItem__star3"
                            app:layout_constraintStart_toEndOf="@+id/scrapRewardItem__star1"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            android:src="@drawable/star"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/scrapRewardItem__star3"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/scrapRewardItem__star4"
                            app:layout_constraintStart_toEndOf="@+id/scrapRewardItem__star2"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            android:src="@drawable/star"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/scrapRewardItem__star4"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/scrapRewardItem__star3"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            android:src="@drawable/star"
                            tools:ignore="ContentDescription" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/scrapRewardItem_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scrapRewardItem_border"
                android:layout_alignStart="@id/scrapRewardItem_border"
                android:layout_alignEnd="@id/scrapRewardItem_border"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                style="@style/defaultText"
                android:textSize="14sp"
                tools:text="x13"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>